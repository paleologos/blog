<% include ./partials/header %>
<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <div class="form-area">
        <form role="form" action="/posts/new" method="post">
        <br style="clear:both">
                    <h3 class="text-info" style="margin-bottom: 25px; text-align: center;">Add new post</h3>
    				<div class="form-group">
						<input type="text" class="form-control" id="name" name="title" placeholder="Title" required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" id="email" name="category" placeholder="Category" required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" id="mobile" name="image" placeholder="Image" required>
					</div>

                    <div class="form-group">
                    <textarea class="form-control" type="textarea" id="message" placeholder="Enter your thoughs here ..." maxlength="140" rows="7" name="content"></textarea>
                        <span class="help-block"><p id="characterLeft" class="help-block "></p></span>
                    </div>

        <button type="submit" id="submit" name="submit" class="btn btn-primary pull-right">Save</button>
        </form>
    </div>
</div>

</div>
<% include ./partials/footer %>
